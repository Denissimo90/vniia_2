@model LoginViewModel
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<div class="login-page">
    <div class="page-header">
        <h1>Страница авторизации</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Авторизация</h3>
                    </div>
                    <div class="panel-body">

                        <form method="post" action="~/Account/LoginTest">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label>Логин</label>
                                    <input class="form-control" placeholder="Логин" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label>Пароль</label>
                                    <input type="password" class="form-control" placeholder="Пароль" asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                            <div class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <strong>Запомнить пароль?</strong>
                                </label>
                            </div>}
                                @{ var parms = new Dictionary<string, string>
                                                                                            {
                                        { "username", Model.Username },
                                        { "password", Model.Password },
                                        { "rememberPass", Model.RememberLogin.ToString() },
                                        { "returnUrl", Model.ReturnUrl },
                                        { "button", "login" },
                                    }; 
                                 }
                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" type="submit" value="Отправить">Вход</button>
                                    <button class="btn btn-default" name="button" value="cancel">Отмена</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>